<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gamelay"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/beatDisplay"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="@string/progression"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/score"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:text="@string/zero"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/level"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:text="@string/getready"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/beatDisplay"
        android:layout_alignEnd="@+id/score" />

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/b1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/beatDisplay" />

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/b2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/b1" />

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/b3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/b1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/shake"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:text="@string/shake"
        android:textIsSelectable="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>